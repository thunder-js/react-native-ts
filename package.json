{
  "name": "TsPlayground",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "test": "jest",
    "lint": "tslint src/**/*.ts",
    "start:ios": "yarn haul start --platform ios",
    "start:android": "npm run build && concurrently -r 'npm run watch' 'react-native run-android'",
    "build:watch": "npm run watch",
    "storybook": "storybook start -p 7007 --haul webpack.haul.storybook.js --platform ios",
    "postinstall": "yarn link common-data storm-onboarding storm-auth",
    "watch-types": "./script/watch-graphql-typescript-types",
    "lint-fix": "tslint --fix --project ./tsconfig.json --config ./tslint.json",
    "update-schema": "mkdir -p data/ && node ./script/update-schema.js"
  },
  "dependencies": {
    "apollo-client": "^2.0.3",
    "graphql": "^0.11.7",
    "graphql-tag": "^2.6.0",
    "moment": "^2.19.2",
    "ramda": "^0.25.0",
    "react": "16.0.0",
    "react-apollo": "^2.0.1",
    "react-native": "0.50.4",
    "recompose": "^0.26.0",
    "storm-system-components": "^0.0.3",
    "styled-components": "^2.2.3",
    "ts-mockito": "^2.2.7"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.16",
    "@storybook/addon-links": "^3.2.16",
    "@storybook/react-native": "^3.2.16",
    "@types/jest": "^21.1.8",
    "@types/ramda": "^0.25.7",
    "@types/react": "^16.0.25",
    "@types/react-native": "^0.50.7",
    "@types/recompose": "^0.24.3",
    "awesome-typescript-loader": "^3.4.0",
    "babel-jest": "21.2.0",
    "babel-plugin-transform-inline-environment-variables": "^0.2.0",
    "babel-preset-react-native": "4.0.0",
    "concurrently": "^3.5.1",
    "haul": "^1.0.0-beta.10",
    "jest": "21.2.1",
    "prop-types": "^15.6.0",
    "react-dom": "16.0.0",
    "react-test-renderer": "16.0.0",
    "rimraf": "^2.6.2",
    "ts-loader": "^3.1.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "typings": "^2.1.1"
  },
  "jest": {
    "preset": "react-native",
    "testRegex": "artifacts/.+\\.(test|spec).js$",
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text-summary",
      "html"
    ],
    "collectCoverageFrom": [
      "artifacts/**/*.js",
      "!artifacts/**/*.spec.js",
      "!artifacts/**/*.index.js"
    ]
  }
}
